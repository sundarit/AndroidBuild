<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vadmin.tweet" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TweetListActivity"
            android:label="@string/title_activity_tweet_list" >
        </activity>
        <activity
            android:name=".row_tweet"
            android:label="@string/title_activity_row_tweet" >
        </activity>
        <activity
            android:name=".TweetDetailActivity"
            android:label="@string/title_activity_tweet_detail" >
        </activity>
        <activity
            android:name=".Tabs"
            android:label="@string/tabs" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
